<h1>Players</h1>
<div class="well">
  <%= link_to "New Player", new_person_path, class: "btn btn-primary col" %>
</div>

<% if flash[:notice] %>
    <div class="alert alert-success"><%= flash[:notice] %></div>
<% end %>

<table class="table table-bordered table-striped">
  <thead>
  <tr>
    <th>Inviter</th>
    <th>Picked?</th>
    <th>Invited</th>
    <th>Picked?</th>
    <th>&nbsp;</th>
    <th>&nbsp;</th>
  </tr>
  </thead>
  <tbody>
  <% if @people.size == 0 %>
      <tr>
        <td colspan="6">No players found.</td>
      </tr>
  <% else %>
      <% @people.each do |person| %>
          <tr>
            <td><%= person.inviter %></td>
            <td>
              <%= person.erPicked %>
            </td>
            <td><%= person.invited %></td>
            <td><%= person.edPicked %></td>
            <td>
              <%= link_to "Edit", edit_person_path(person), class: "btn btn-default" %>
            </td>
            <td>
              <%= button_to "Delete", person, method: :delete, data: { confirm: "Are you sure you wish to delete #{person.invited} #{person.inviter}?" }, class: "btn btn-danger" %>
            </td>
          </tr>
      <% end %>
  <% end %>
  </tbody>
</table>
